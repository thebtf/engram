<?xml version="1.0"?>
<Container version="2">
  <Name>claude-mnemonic-plus</Name>
  <Repository>ghcr.io/thebtf/claude-mnemonic-plus:latest</Repository>
  <Registry>https://github.com/thebtf/claude-mnemonic-plus/pkgs/container/claude-mnemonic-plus</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/thebtf/claude-mnemonic-plus/issues</Support>
  <Project>https://github.com/thebtf/claude-mnemonic-plus</Project>
  <Overview>
    Claude Mnemonic Plus - persistent memory system for Claude Code.
    Captures observations, decisions, and patterns from AI coding sessions.
    Stores in PostgreSQL+pgvector, provides MCP tools via SSE and HTTP API.
    Requires a PostgreSQL 17+ instance with pgvector extension.
  </Overview>
  <Category>Tools: Productivity:</Category>
  <WebUI>http://[IP]:[PORT:37777]/</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/thebtf/claude-mnemonic-plus/main/deploy/unraid/unleashed-CMPlus.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/thebtf/claude-mnemonic-plus/main/deploy/icon.svg</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>PostgreSQL 17+ with pgvector extension (use pgvector/pgvector:pg17 image)</Requires>
  <Config Name="Worker Port" Target="37777" Default="37777" Mode="tcp" Description="Worker HTTP API port (hooks + dashboard)" Type="Port" Display="always" Required="true" Mask="false">37777</Config>
  <Config Name="MCP SSE Port" Target="37778" Default="37778" Mode="tcp" Description="MCP SSE transport port (nia tools)" Type="Port" Display="always" Required="true" Mask="false">37778</Config>
  <Config Name="DATABASE_DSN" Target="DATABASE_DSN" Default="postgres://mnemonic:mnemonic@unleashed.lan:5432/claude_mnemonic?sslmode=disable" Mode="" Description="PostgreSQL connection string (must have pgvector extension)" Type="Variable" Display="always" Required="true" Mask="false">postgres://mnemonic:mnemonic@unleashed.lan:5432/claude_mnemonic?sslmode=disable</Config>
  <Config Name="CLAUDE_MNEMONIC_API_TOKEN" Target="CLAUDE_MNEMONIC_API_TOKEN" Default="" Mode="" Description="API token for authentication (leave empty to disable)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="CLAUDE_MNEMONIC_WORKER_HOST" Target="CLAUDE_MNEMONIC_WORKER_HOST" Default="0.0.0.0" Mode="" Description="Worker bind address" Type="Variable" Display="advanced" Required="false" Mask="false">0.0.0.0</Config>
  <Config Name="CLAUDE_MNEMONIC_WORKER_PORT" Target="CLAUDE_MNEMONIC_WORKER_PORT" Default="37777" Mode="" Description="Worker internal port" Type="Variable" Display="advanced" Required="false" Mask="false">37777</Config>
  <Config Name="CLAUDE_MNEMONIC_MCP_SSE_PORT" Target="CLAUDE_MNEMONIC_MCP_SSE_PORT" Default="37778" Mode="" Description="MCP SSE internal port" Type="Variable" Display="advanced" Required="false" Mask="false">37778</Config>
  <Config Name="CLAUDE_MNEMONIC_EMBEDDING_PROVIDER" Target="CLAUDE_MNEMONIC_EMBEDDING_PROVIDER" Default="openai" Mode="" Description="Embedding provider: openai (recommended for LiteLLM) or builtin (ONNX BGE)" Type="Variable" Display="always" Required="false" Mask="false">openai</Config>
  <Config Name="CLAUDE_MNEMONIC_EMBEDDING_BASE_URL" Target="CLAUDE_MNEMONIC_EMBEDDING_BASE_URL" Default="http://unleashed.lan:4000/v1" Mode="" Description="Embedding API base URL (e.g. LiteLLM proxy)" Type="Variable" Display="always" Required="false" Mask="false">http://unleashed.lan:4000/v1</Config>
  <Config Name="CLAUDE_MNEMONIC_EMBEDDING_API_KEY" Target="CLAUDE_MNEMONIC_EMBEDDING_API_KEY" Default="" Mode="" Description="Embedding API key (for LiteLLM or OpenAI)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="CLAUDE_MNEMONIC_EMBEDDING_MODEL_NAME" Target="CLAUDE_MNEMONIC_EMBEDDING_MODEL_NAME" Default="openai/Qwen/Qwen3-Embedding-8B" Mode="" Description="Embedding model name" Type="Variable" Display="always" Required="false" Mask="false">openai/Qwen/Qwen3-Embedding-8B</Config>
  <Config Name="CLAUDE_MNEMONIC_EMBEDDING_DIMENSIONS" Target="CLAUDE_MNEMONIC_EMBEDDING_DIMENSIONS" Default="4096" Mode="" Description="Embedding vector dimensions" Type="Variable" Display="always" Required="false" Mask="false">4096</Config>
  <Config Name="Data Directory" Target="/data" Default="/mnt/user/appdata/claude-mnemonic-plus" Mode="rw" Description="Persistent data directory" Type="Path" Display="always" Required="false" Mask="false">/mnt/user/appdata/claude-mnemonic-plus</Config>
</Container>
